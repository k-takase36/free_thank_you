<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">自分の名前</th>
      <th scope="col">相手の名前</th>
      <th scope="col">相手の名前</th>


      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each.with_index(1) do |post, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= post.user_id %></td>
        <td>
          <%= link_to "詳細", post %>
          <%= link_to "削除", post, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>